{
  "name": "todo-list-app",
  "version": "1.0.0",
  "description": "A simple to-do list application",
  "main": "script.js",  "scripts": {
    "test": "echo \"No tests specified yet\" && exit 0",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.css",
    "lint:html": "htmlhint *.html",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint --fix *.js",
    "lint:css:fix": "stylelint --fix *.css",
    "setup:hooks": "powershell -File .\\setup-hooks.ps1",
    "setup:hooks:unix": "chmod +x setup-hooks.sh && ./setup-hooks.sh",
    "build": "node build.js",
    "deploy:dev": "powershell -File .\\deploy.ps1 -Environment dev",
    "deploy:prod": "powershell -File .\\deploy.ps1 -Environment prod",
    "deploy:dev:azure": "powershell -File .\\deploy.ps1 -Environment dev -DeployTarget azure",
    "deploy:prod:azure": "powershell -File .\\deploy.ps1 -Environment prod -DeployTarget azure",
    "deploy:dev:aws": "powershell -File .\\deploy.ps1 -Environment dev -DeployTarget aws",
    "deploy:prod:aws": "powershell -File .\\deploy.ps1 -Environment prod -DeployTarget aws",
    "start": "npx http-server -o -p 8080",
    "start:dev": "npm run lint && npm run start",    "start:prod": "npm run lint && npm run build && npm run start",
    "monitor:dev": "node performance-monitor.js https://todoappdevstatic.z13.web.core.windows.net/",
    "monitor:prod": "node performance-monitor.js https://todoapprodstatic.z13.web.core.windows.net/",
    "monitor:local": "node performance-monitor.js http://localhost:8080",    "watch:dev": "node continuous-monitor.js dev --interval=5",
    "watch:prod": "node continuous-monitor.js prod --interval=10",
    "watch:local": "node continuous-monitor.js local --interval=2",
    "alert:dev": "node continuous-monitor.js dev --notify --interval=5",
    "alert:prod": "node continuous-monitor.js prod --notify --interval=10",
    "monitor": "powershell -File .\\monitor-app.ps1",
    "monitor:unix": "chmod +x monitor-app.sh && ./monitor-app.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saketmishra7224/CI-CD.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/saketmishra7224/CI-CD/issues"
  },
  "homepage": "https://github.com/saketmishra7224/CI-CD#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "eslint": "^8.57.1",
    "html-minifier": "^4.0.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.39.2"
  }
}
